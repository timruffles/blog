<article>
  
  <svg viewBox="0 0 75 40" preserveAspectRatio="xMinYMin meet" class="top left">
    <polygon 
      points='0 40  75 0  75 40'
    ></polygon>
  </svg>
  
  <div class='content'>
    <h1><a href="<%= @perma %>"><%= @title%></a></h1>
    <%= @body %>

  </div>

  <div class=footer>
    <% if @previous_article %>
      <p class=nav>
        Previous: <a href="<%= @previous_article.link %>">
          <%= @previous_article.title %>
        </a>
      <p>
    <% end %>

    <% if @next_article %>
      <p class=nav>
        Next: <a href="<%= @next_article.link %>">
          <%= @next_article.title %>
        </a>
      </p>
    <% end %>

    <% unless @article.category == "Ideas" || @article.ads_disabled %>
      <p class=plug>Want to be proud of your team's Javascript? Try my <a href="http://www.sidekickjs.com">code-quality tool for teams - SidekickJS</a><p>
    <% end %>

    <p class=subscribeHint>Enjoyed this? Get more like it in your email!</p>
    <form class=subscribe>
      <input type=email placeholder=ilike@javascript.com>
      <input type=submit value=Subscribe>
    </form>
  </div>

</article>

<% unless @footnotes.empty? %>
  <div class="footnotes">
    <h3>Footnotes</h3>
    <ul>
      <% @footnotes.each do |note| %>
        <li id="<%= note.id %>"><%= note.text %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% unless @article.comments_disabled %>
  <%= erb :comments %>
<% end %>
