<article>

  <div class='content'>
    <h1><a href="<%= @perma %>"><%= @title%></a></h1>
    <%= @body %>

  </div>

  <% if @article.type == "post" %>
    <%= erb :post_footer %>
  <% end %>

  <% unless @footnotes.empty? %>
    <div class="footnotes">
      <h3>Footnotes</h3>
      <ul>
        <% @footnotes.each do |note| %>
          <li id="<%= note.id %>"><%= note.text %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @article.type == "post" && !@article.comments_disabled %>
    <%= erb :comments %>
  <% end %>

</article>


